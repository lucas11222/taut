{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,

    "strict": true,

    "noEmit": true,

    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "lib": ["ESNext", "DOM"],

    "baseUrl": ".",
    "paths": {
      "*": ["*"]
    },

    "jsx": "react",

    "types": ["bun", "node"],
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.cjs"],
  "exclude": ["node_modules", "**/deps/", "tmp*"]
}
